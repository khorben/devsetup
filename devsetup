LDAP_SUFFIX="dc=example,dc=com"
LDAP_SUFFIX_GROUPS="ou=Groups,$LDAP_SUFFIX"
LDAP_SUFFIX_USERS="ou=Users,$LDAP_SUFFIX"
PACKAGE_DEPENDENCIES="archivers/bzip2
converters/libiconv
