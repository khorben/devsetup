DEVNULL="/dev/null"
FASTCGI_ADDRESS="127.0.0.1"
FASTCGI_PORT=9000
GROUP="$USER"
case $($UNAME) in
	Darwin)
		GROUP="staff"
		;;
esac
HTTP_ADDRESS=
HTTP_PORT=8080
IMAP_ADDRESS=
IMAP_PORT=1143
LDAP_ADDRESS=
LDAP_ADMIN_PASSWORD="ldapseed${HOME}padding"
LDAP_ADMIN_USERNAME="admin"
